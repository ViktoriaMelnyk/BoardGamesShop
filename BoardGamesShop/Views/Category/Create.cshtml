@model Category
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="p-3 mt-4 border">
        <div class="row pb-2">
            <h2 class = "text-primary ">DODAJ NOWĄ KATEGORIJĘ</h2>
            <hr/>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4">Nazwa kategorii:</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for ="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <label asp-for="DisplayOrder" class="form-label mt-4">Kolejność wyświetlania:</label>
            <input asp-for="DisplayOrder" class="form-control"/>
            <span asp-validation-for ="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Dodaj</button>
        <a asp-controller = "Category" asp-action="Index" class="btn btn-secondary">Wstecz</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}


