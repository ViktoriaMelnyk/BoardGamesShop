@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



    
        <form id="registerForm" class ="mt-5 row container-sm" style="max-width:50%; margin:0 auto;" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center">Stwórz nowe konto</h2>
            <hr />
            <div class="form-floating my-3 col-6">
                <input asp-for="Input.Email" class="form-control"  aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating  my-3 col-6">
                <input asp-for="Input.Name" class="form-control"  aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            

            <div class="form-floating my-3 col-6">
                <input asp-for="Input.City" class="form-control"  aria-required="true" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating my-3 col-6">
                <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" />
                <label asp-for="Input.StreetAddress"></label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating my-3 col-6">
                <input asp-for="Input.PostalCode" class="form-control"  aria-required="true" />
                <label asp-for="Input.PostalCode"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating my-3 col-6">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating my-3 col-6">
                <input asp-for="Input.Password" class="form-control" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating my-3 col-6">
                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="form-floating my-3 col-6">
                <select class="form-select" asp-for="Input.Role" asp-items="@Model.Input.RoleList">
                    <option disabled selected>--Wybierz Role--</option>
                </select> 
            </div>
            <div class="form-floating my-3 col-6">
                <select class="form-select" asp-for="Input.CompanyId" asp-items="@Model.Input.CompanyList" style="display:none;"></select> 
            </div>
            <button id="registerSubmit" type="submit" class=" btn btn-lg btn-primary">Register</button>
        </form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        <script>
        $(document).ready(function(){
            $('#Input_Role').change(function(){
                var selection= $('#Input_Role Option:Selected').text();
                if(selection!='Przedsiębiorca'){
                    $('#Input_CompanyId').hide();
                }
                else{
                    $('#Input_CompanyId').show();
                }
            })
        })
    </script>
}
