@page
@model LoginModel






        <section>
            <form id="account" method="post" class ="mt-5 container-sm" style="max-width:50%;">
                <h2>Log In.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating my-3">
                    <input asp-for="Input.Email" class="form-control"  aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating my-3">
                    <input asp-for="Input.Password" class="form-control"  aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox my-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary my-3">Log in</button>
                </div>
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" >Swórz nowe konto</a>
                    </p>
                </div>
            </form>
        </section>
    
    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
