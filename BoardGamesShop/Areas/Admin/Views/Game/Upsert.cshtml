@model Game
<form method="post" asp-action="Upsert" enctype ="multipart/form-data">
    <fieldset>
    <div class="p-3 mt-4 border row">
        <div class="row pb-2">
            <h2 class = "text-primary "> @(Model.Id!=0?"EDYTUJ": "DODAJ") GRĘ</h2>
            <hr/>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4">Nazwa Gry:</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for ="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <label asp-for="Description" class="form-label mt-4">Opis:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for ="Description" class="text-danger"></span>
        </div>
                <div class="form-group mb-5 col-6" >
            <label asp-for="MinPlayers" class="form-label mt-4">MinGraczy:</label>
            <input asp-for="MinPlayers" class="form-control"/>
            <span asp-validation-for ="MinPlayers" class="text-danger"></span>
        </div>
                <div class="form-group mb-5 col-6">
            <label asp-for="MaxPlayers" class="form-label mt-4">MaxGraczy:</label>
            <input asp-for="MaxPlayers" class="form-control"/>
            <span asp-validation-for ="MaxPlayers" class="text-danger"></span>
        </div>
        <div class="form-group mb-5 col-6">
            <label asp-for="Authors" class="form-label mt-4">Autorzy:</label>
            <input asp-for="Authors" class="form-control"/>
            <span asp-validation-for ="Authors" class="text-danger"></span>
        </div>
                        <div class="form-group mb-5 col-6">
            <label asp-for="ListPrice" class="form-label mt-4">Cena katalogowa:</label>
            <input asp-for="ListPrice" class="form-control"/>
            <span asp-validation-for ="ListPrice" class="text-danger"></span>
        </div>
                        <div class="form-group mb-5 col-6">
            <label asp-for="Price" class="form-label mt-4">Cena:</label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for ="Price" class="text-danger"></span>
        </div>
                        <div class="form-group mb-5 col-6">
            <label asp-for="Price3" class="form-label mt-4">Cena przy zakupie 3 sztuk:</label>
            <input asp-for="Price3" class="form-control"/>
            <span asp-validation-for ="Price3" class="text-danger"></span>
        </div>
                        <div class="form-group mb-5 col-6">
            <label asp-for="Price10" class="form-label mt-4">Cena przy zakupie 10 sztuk:</label>
            <input asp-for="Price10" class="form-control"/>
            <span asp-validation-for ="Price10" class="text-danger"></span>
        </div>
         <div class="form-group mb-5">
            <label asp-for="CategoryId" class="form-label mt-4">Kategoria:</label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
                <option disabled selected>--Wybierz kategorię</option>
            </select>
            <span asp-validation-for ="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <label asp-for="ImageUrl" class="form-label mt-4">Zdjęcie:</label>
            <input type="file" asp-for="ImageUrl" name = "file" class="form-control" id="uploadBox"/>
        </div>
        <div class="col-12">
                @if (Model.Id != 0)
                {
                    <button type="submit" class="btn btn-primary">Edytuj</button>
                }
                else
                {
                    <button type="submit" onclick ="return ValidateInput()" class="btn btn-primary">Dodaj</button>
                }
                
        <a asp-controller = "Category" asp-action="Index" class="btn btn-secondary">Wstecz</a>
        </div>

    </div>
    </fieldset>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
    <script>
        function ValidateInput(){
            if(document.getElementById("uploadBox").value==""){
                Swal.fire({
                    icon: 'error',
                    title:'Ojej..Coś poszło nie tak!',
                    text: 'Proszę załadować zdjęcie!',
                });
                return false;
            }
            return true;
        }

    </script>
    }
