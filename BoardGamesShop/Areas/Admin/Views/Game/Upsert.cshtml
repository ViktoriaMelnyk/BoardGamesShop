@model BoardGames.Models.ViewModels.GameVM
<form method="post" asp-action="Upsert" enctype ="multipart/form-data">
    <fieldset>
        <input hidden asp-for="Game.Id"/>
        <input hidden asp-for="Game.ImageUrl"/>

    <div class="p-3 mt-4 border row">
        <div class="row pb-2">
            <h2 class = "text-primary "> @(Model.Game.Id!=0?"EDYTUJ": "DODAJ") GRĘ</h2>
            <hr/>
        </div>
         <div class = "col-2">
            <img src="@Model.Game.ImageUrl" width= "100%"/>
        </div>
        <div class="form-group">
            <label asp-for="Game.Name" class="form-label mt-4">Nazwa Gry:</label>
            <input asp-for="Game.Name" class="form-control"/>
            <span asp-validation-for ="Game.Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <label asp-for="Game.Description" class="form-label mt-4">Opis:</label>
            <textarea asp-for="Game.Description" class="form-control"></textarea>
            <span asp-validation-for ="Game.Description" class="text-danger"></span>
        </div>
                <div class="form-group mb-5 col-6" >
            <label asp-for="Game.MinPlayers" class="form-label mt-4">MinGraczy:</label>
            <input asp-for="Game.MinPlayers" class="form-control"/>
            <span asp-validation-for ="Game.MinPlayers" class="text-danger"></span>
        </div>
                <div class="form-group mb-5 col-6">
            <label asp-for="Game.MaxPlayers" class="form-label mt-4">MaxGraczy:</label>
            <input asp-for="Game.MaxPlayers" class="form-control"/>
            <span asp-validation-for ="Game.MaxPlayers" class="text-danger"></span>
        </div>
        <div class="form-group mb-5 col-6">
            <label asp-for="Game.Authors" class="form-label mt-4">Autorzy:</label>
            <input asp-for="Game.Authors" class="form-control"/>
            <span asp-validation-for ="Game.Authors" class="text-danger"></span>
        </div>
         <div class="form-group mb-5 col-6">
            <label asp-for="Game.ListPrice" class="form-label mt-4">Cena katalogowa:</label>
            <input asp-for="Game.ListPrice" class="form-control"/>
            <span asp-validation-for ="Game.ListPrice" class="text-danger"></span>
        </div>
                        <div class="form-group mb-5 col-6">
            <label asp-for="Game.Price" class="form-label mt-4">Cena:</label>
            <input asp-for="Game.Price" class="form-control"/>
            <span asp-validation-for ="Game.Price" class="text-danger"></span>
        </div>
                        <div class="form-group mb-5 col-6">
            <label asp-for="Game.Price3" class="form-label mt-4">Cena przy zakupie 3 sztuk:</label>
            <input asp-for="Game.Price3" class="form-control"/>
            <span asp-validation-for ="Game.Price3" class="text-danger"></span>
        </div>
                        <div class="form-group mb-5 col-6">
            <label asp-for="Game.Price10" class="form-label mt-4">Cena przy zakupie 10 sztuk:</label>
            <input asp-for="Game.Price10" class="form-control"/>
            <span asp-validation-for ="Game.Price10" class="text-danger"></span>
        </div>
         <div class="form-group mb-5">
            <label asp-for="Game.CategoryId" class="form-label mt-4">Kategoria:</label>
            <select asp-for="Game.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--Wybierz kategorię</option>
            </select>
            <span asp-validation-for ="Game.CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <label asp-for="Game.ImageUrl" class="form-label mt-4">Zdjęcie:</label>
            <input type="file" asp-for="Game.ImageUrl" name = "file" class="form-control" id="uploadBox"/>
        </div>
        <div class="col-12">
                @if (Model.Game.Id != 0)
                {
                    <button type="submit" class="btn btn-primary">Edytuj</button>
                }
                else
                {
                    <button type="submit" onclick ="return ValidateInput()" class="btn btn-primary">Dodaj</button>
                }
                
        <a asp-controller = "Game" asp-action="Index" class="btn btn-secondary">Wstecz</a>
        </div>
       

    </div>
    </fieldset>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
    <script>
        function ValidateInput(){
            if(document.getElementById("uploadBox").value==""){
                Swal.fire({
                    icon: 'error',
                    title:'Ojej..Coś poszło nie tak!',
                    text: 'Proszę załadować zdjęcie!',
                });
                return false;
            }
            return true;
        }
    </script>
    }
