@model IEnumerable<BoardGames.Models.Game>

<div class="row pb-3">
    @foreach(var game in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-5 " style="border-radius:5px;">
                    <div class = "card p-3">
                        <img src="@game.ImageUrl" class="card-img-top rounded mb-3"/>
                        <div class="pl-1">
                             <a asp-controller="Home" asp-action="Details" asp-route-gameId="@game.Id" class=" btn btn-link">@game.Name</a>
                            <p class= "card-title ">Ilość graczy: @game.MinPlayers-@game.MaxPlayers</p>
                            <p class= "card-title ">@game.Authors</p>
                        </div>
                        <div class="pl-1">
                            <p ><b class="text-secondary"> @game.Price.ToString("0.00") zł</b> <strike>  @game.ListPrice.ToString("0.00") zł</strike></p>

                        </div>


                    </div>
                </div>
            </div>
        </div>
    }
</div>
